# bedtool create window
bedtools makewindows -g sizes.genome -w 250000 > B73_250000_window.bed

# format the window and replace 0 starting value with 1
awk '{if(length($2)==1){sub("0","1",$2)};if(length($4)==1){sub("0","1",$4)}} 1' OFS="\t" B73_250000_window.bed > B73_250000_window_fmt.bed

